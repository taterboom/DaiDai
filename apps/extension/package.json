{
  "name": "daidai-extension",
  "scripts": {
    "build": "rm -rf dist && pnpm compile && pnpm cp",
    "compile": "npx esbuild background=./background.ts content_script=./content_script.ts --bundle --outdir=dist --target=esnext --define:process.env.NEXT_PUBLIC_EXTENSION=chrome",
    "cp": "pnpm cp:ext & pnpm cp:popup",
    "cp:ext": "cp ./manifest.json dist/ & cp -R ./images dist/",
    "cp:popup": "mkdir dist/popup && cp -R ../extension-popup/out/ dist/popup/"
  },
  "dependencies": {
    "esbuild": "^0.15.10"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.197"
  }
}
