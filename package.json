{
  "name": "daidai",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "dev:web": "turbo run dev --parallel --filter=./apps/web",
    "build:ext": "turbo run build --parallel --filter=./apps/extension-* && turbo run build --filter=./apps/extension",
    "lint": "turbo run lint",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "turbo": "latest"
  }
}
